# Run the container with `docker run -p 3000:3000 -t express`.
FROM docker.io/node:16.17.1-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system nest && \
          adduser --system -G nest nest

COPY dist/apps/data-platform api
RUN chown -R nest:nest .

CMD [ "node", "api/main.js" ]
